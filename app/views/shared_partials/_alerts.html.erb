<% if flash[:notice] %>
  <div class="alert alert-success">
  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
  <%= flash[:notice] %>
</div>
<% else %>
  <% flash.each do |key, value| %>
  <div class="alert alert-danger">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <%= value %>
  </div>
  <% end %>
<% end %>